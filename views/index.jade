extends layout

block content


  div.loginSideBar(ng-class='{closedLogin: hideLogin}')


    if (!user)
        p not currently logged in!
        p please login or register
        br
        a(href="/login") Login
        br
        a(href="/register") Register
    if (user)
        p You are currently logged in as #{user.name}
        a(href="/logout") Logout
    br
    a(href="/auth/twitter") Login via Twitter


    div.trending
        h3 Trending
        ul.trendingMinneapolis(ng-repeat="trending in trendingData")
          li {{trending.name}}

  div.savedSideBar(ng-class='{closedSaved: hideSaved}')
    div.fixRight
      h2 Saved List
      div.savedList(ng-repeat="item in currentSaveList")
          div.listitem
              p {{item.tweet}}

  div.headerContent(ng-class="{menuShiftLeft: hideLogin}")
    h1= title
    p this will be where ALL THE CONTENT GOES
    h2 {{mainContent.test}}
    b
    p show hide saved menu
      input(type='checkbox' ng-click='loadReadingList()' ng-model='hideSaved')
    p show hide login menu
      input(type='checkbox' ng-model='hideLogin')

  div(infinite-scroll='loadMoreTweets()' infinite-scroll-disabled='twitter.busy')



    div.tweetList(ng-class="{menuShiftLeft: hideLogin}" ng-repeat="tweet in initialData")
      div.singleTweet
        b
          span.twitterHandle {{tweet.user.name}}
        p
          img.profilePicture(src="{{tweet.user.profile_image_url}}")
        p.tweetcontent {{tweet.text}}
        a(href='{{tweet.entities.urls[0].expanded_url}}') {{tweet.entities.urls[0].expanded_url}}
        //p {{tweet.entities.media[0].expanded_url}}
        //img(src='{{tweet.entities.media[0].media_url}}')
        button(ng-click='saveTweet($index)') save
        p {{tweet.retweet_count}}

    div.spacer
    //<div class="spacer" style="clear: both;"></div>

